{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "setup": "npm install && npm run copy-sample-env",
        "test-pre": "(docker-compose down || echo skipped docker-compose down) && docker-compose up -d",
        "test-run": "jest --verbose --runInBand --forceExit --coverage",
        "test-post": "docker-compose down",
        "test-watch": "jest --verbose --runInBand --forceExit --watch",
        "test": "npm run test-pre && npm run test-run && npm run test-post",
        "tsc": "tsc",
        "dev": "run-p start-dev-database start-dev",
        "lint": "eslint --max-warnings=0 --ext .ts .",
        "build": "tsc",
        "start": "node build/index.js",
        "start-dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
        "start-dev-database": "(docker-compose down || echo skipped docker-compose down) && docker-compose up",
        "copy-sample-env": "cpy .env-sample . --no-overwrite --rename=.env || echo skipped copy-sample-env",
        "migrate": "node-pg-migrate"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.3.4",
        "bcrypt": "^5.1.0",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-async-handler": "^1.2.0",
        "jsonwebtoken": "^9.0.0",
        "node-pg-migrate": "^6.2.2",
        "pg": "^8.10.0",
        "winston": "^3.8.2",
        "xlsx": "^0.18.5",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/pg": "^8.6.6",
        "@types/supertest": "^2.0.12",
        "@types/xlsx": "^0.0.36",
        "@typescript-eslint/eslint-plugin": "^5.57.0",
        "@typescript-eslint/parser": "^5.57.0",
        "eslint": "^8.37.0",
        "jest": "^29.5.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.2"
    }
}
